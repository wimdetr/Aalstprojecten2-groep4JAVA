<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ChoiceBox?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>

<fx:root style="-fx-background-color: lightgrey; -fx-border-color: #99cc00;" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <bottom>
      <HBox alignment="CENTER_LEFT" prefHeight="100.0" prefWidth="200.0" spacing="10.0" BorderPane.alignment="CENTER">
         <children>
            <Button mnemonicParsing="false" text="Selecteer alle" />
            <Button mnemonicParsing="false" text="Button" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </BorderPane.margin>
         <padding>
            <Insets bottom="5.0" left="5.0" right="5.0" top="5.0" />
         </padding>
      </HBox>
   </bottom>
   <center>
      <TableView fx:id="gebruikersTableView" prefHeight="480.0" prefWidth="580.0" BorderPane.alignment="CENTER">
        <columns>
          <TableColumn fx:id="voorNaamCol" prefWidth="128.0" text="Voornaam" />
          <TableColumn fx:id="naamCol" prefWidth="186.0" text="Naam" />
            <TableColumn fx:id="organisatieCol" prefWidth="225.0" text="Organisatie" />
            <TableColumn fx:id="adresCol" prefWidth="193.0" text="Adres" />
            <TableColumn fx:id="emailCol" prefWidth="193.0" text="Email" />
            <TableColumn fx:id="postcodeCol" prefWidth="75.0" text="Postcode" />
        </columns>
         <BorderPane.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </TableView>
   </center>
   <top>
      <HBox alignment="BOTTOM_LEFT" prefHeight="100.0" prefWidth="440.0" spacing="10.0">
         <children>
            <TextField fx:id="zoekTextField" prefHeight="26.0" prefWidth="296.0" />
            <ChoiceBox fx:id="zoekChoiceBox" prefWidth="150.0" />
            <Button mnemonicParsing="false" onAction="#doZoek" prefHeight="26.0" prefWidth="113.0" text="Zoek" />
         </children>
         <BorderPane.margin>
            <Insets bottom="5.0" left="10.0" right="10.0" top="10.0" />
         </BorderPane.margin>
      </HBox>
   </top>
</fx:root>
