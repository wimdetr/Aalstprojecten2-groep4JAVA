<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Separator?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<fx:root stylesheets="@../css/adminbeherenscherm.css" type="BorderPane" xmlns="http://javafx.com/javafx/8.0.111" xmlns:fx="http://javafx.com/fxml/1">
   <padding>
      <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
   </padding>
   <top>
      <VBox prefHeight="102.0" prefWidth="591.0" BorderPane.alignment="CENTER">
         <children>
            <Label text="Administrators" textFill="#85beb8">
               <font>
                  <Font name="Likhan" size="32.0" />
               </font>
            </Label>
            <Separator prefWidth="200.0" />
            <HBox prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <Region prefHeight="200.0" prefWidth="200.0" HBox.hgrow="ALWAYS" />
                  <HBox alignment="BOTTOM_RIGHT" prefHeight="46.0" prefWidth="591.0" spacing="5.0">
                     <children>
                        <Button fx:id="verwijderAdminBtn" mnemonicParsing="false" onAction="#verwijderAdmin" styleClass="deleteButton" text="Verwijder" />
                        <Button fx:id="voegToeBtn" mnemonicParsing="false" onAction="#voegAdminToe" styleClass="addButton" text="Voeg Toe" />
                     </children>
                     <padding>
                        <Insets bottom="5.0" right="1.0" />
                     </padding>
                  </HBox>
               </children>
            </HBox>
         </children>
      </VBox>
   </top>
   <center>
      <TableView fx:id="adminTableView" editable="true" BorderPane.alignment="CENTER">
        <columns>
            <TableColumn fx:id="checkboxColumn" prefWidth="29.0" sortable="false" />
            <TableColumn fx:id="emailColumn" editable="false" minWidth="0.0" prefWidth="202.0" text="Email" />
          <TableColumn fx:id="voornaamColumn" editable="false" prefWidth="196.0" text="Voornaam" />
          <TableColumn fx:id="naamColumn" editable="false" minWidth="0.0" prefWidth="237.0" text="Naam" />
        </columns>
      </TableView>
   </center>
</fx:root>
